<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create new blog post:</h3>

    <form class="form new-blog-form">
      <div class="form-group">
        <label for="blog-name">Blog Title:</label>
        <input class="form-input" type="text" id="blog-title" name="blog-title" />
      </div>
      <div class="form-group">
        <label for="blog-cont">Content:</label>
        <textarea class="form-input" id="blog-cont" name="blog-cont"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Post</button>
      </div>
    </form>
  </div>

  {{#if blogs.length}}
  <div class="col-md-6 blog-list">
    <h3>Your posts:</h3>

    {{#each blogs as |blog|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/blog/{{blog.id}}">{{blog.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger del-btn" data-id="{{blog.id}}">DELETE</button>
        <button  class="btn btn-sm btn-success edit-btn" data-id="{{blog.id}}">EDIT</button>
      </div>
      
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>



<script src="/js/blog.js"></script>
<script src="/js/edit.js"></script>