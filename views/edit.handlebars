<div class="row mt-4">
  <div class="col-md-6">
    <h3>Edit blog post:</h3>

    <form class="form new-blog-form">
      <div class="form-group">
        <label for="blog-name">Blog Title:</label>
        <input class="form-input" type="text" id="blog-title" name="blog-title" value="{{blog.title}}" />
      </div>
      <div class="form-group">
        <label for="blog-cont">Content:</label>
        <textarea class="form-input" id="blog-cont" name="blog-cont">{{blog.content}}</textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
      </div>
    </form>
  </div>